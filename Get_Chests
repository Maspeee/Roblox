--	Services	----------------------------------
--------------------------------------------------

local Players = game:GetService("Players")
local Teleport = game:GetService("TeleportService")
local RStorage = game:GetService("ReplicatedStorage")
local Http = game:GetService("HttpService")
local Core = game:GetService("CoreGui")

--	Variables	----------------------------------
--------------------------------------------------

local team = "Marines"
local maxPing = 500

local plr = Players.LocalPlayer
local char, nextCursor

local placeId = 7449423635 --sea 3
local jobId = game.JobId
local api = "https://games.roblox.com/v1/games/" ..tostring(placeId) .."/servers/Public?sortOrder=Desc&limit=100"

--	Functions	----------------------------------
--------------------------------------------------

function log(content)
    local file = pcall(readfile, "Logs.txt")
    content = os.date() .."\n\t"  ..content .."\n"

    if file then
        appendfile("Logs.txt", content)

    else
        writefile("Logs.txt", content)
    end
end

function getDist(p1, p2)
    return (p1.Position -p2.Position).Magnitude
end

function findNearest()
	local nearest

	for _, v in workspace:GetChildren() do 
		if v.Name == "Chest3" or v.Name == "Chest2" then
			if not nearest then
				nearest = v

			elseif getDist(char.Head, v) < getDist(char.Head, nearest) then
				nearest = v
			end
		end
	end

    return nearest
end

function listServers(cursor)
	local ret
	cursor = (cursor and "&cursor=" ..cursor) or ""

	repeat
		_, ret = pcall(Http.JSONDecode, Http, game:HttpGet(api ..cursor))
	until ret and ret.data
	
	return ret
end

function serverHop()
	repeat
	   	local servers = listServers(nextCursor)
		local success

		for _, s in servers.data do
			if s.playing < s.maxPlayers and s.id ~= jobId and s.ping < maxPing then
				queue_on_teleport(game:HttpGet("https://raw.githubusercontent.com/Maspeee/Blox_Fruits/main/Get_Chests"))
				success = pcall(Teleport.TeleportToPlaceInstance, Teleport, placeId, s.id)

				if success then break end
			end
		end
	   	
	   	nextCursor = servers.nextPageCursor
		task.wait()
	until success or not nextCursor

	task.wait(5)
	if plr then serverHop() end
end

function onKick(child)
	if child.Name == "ErrorPrompt" then
		local success
		log("Kicked")

		repeat
			queue_on_teleport(game:HttpGet("https://raw.githubusercontent.com/Maspeee/Blox_Fruits/main/Get_Chests"))
			success = pcall(Teleport.TeleportToPlaceInstance, Teleport, placeId, jobId)
		until success

		log("Reconnecting")
	end
end



--	Main	--------------------------------------
--------------------------------------------------

RStorage:WaitForChild("Remotes").CommF_:InvokeServer("SetTeam", team)
Core.RobloxPromptGui.promptOverlay.ChildAdded:Connect(onKick)
char = plr.Character or plr.CharacterAdded:Wait()

while true do
	local chest = findNearest()
	
	if not chest then break end
	if not plr.PlayerGui.Main:FindFirstChild("ChooseTeam") then break end
	
	char:PivotTo(chest.CFrame)
	task.wait(.1)
end

log("Cash: " ..plr.Data.Beli.Value)

--------------------------------------------------

if plr.PlayerGui.Main:FindFirstChild("ChooseTeam") then
	serverHop()
end
