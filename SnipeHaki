--	Services  ------------------------------------
--------------------------------------------------

local RStorage = game:GetService("ReplicatedStorage")

--	Variables  -----------------------------------
--------------------------------------------------

local serverHop = loadstring(game:HttpGet("https://raw.githubusercontent.com/Maspeee/Roblox/Shared/ServerHop"))()

local commF = RStorage:WaitForChild("Remotes").CommF_
local scriptLink = "https://raw.githubusercontent.com/Maspeee/Roblox/BloxFruits/SnipeHaki"

local Notif = Instance.new("Sound")
Notif.SoundId = "rbxassetid://261082034"
Notif.PlayOnRemove = true
Notif.Volume = 10
Notif.Parent = workspace

--	Functions  -----------------------------------
--------------------------------------------------

function snipe(team, goal, maxPing, freeSlots)
    local team = team or "Marines"
    local goal = goal or "Winter Sky"
    
    commF:InvokeServer("SetTeam", team)
    local color = commF:InvokeServer("ColorsDealer", "1")
    
    if color == goal then        print("Request for buying " ..color)
        commF:InvokeServer("ColorsDealer", "2")
        Notif:Destroy()
        
    else
        serverHop(scriptLink, maxPing, freeSlots)
    end
end

--	Main  ----------------------------------------
--------------------------------------------------

snipe()
