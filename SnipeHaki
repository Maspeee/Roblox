--	Services  ------------------------------------
--------------------------------------------------

local RStorage = game:GetService("ReplicatedStorage")

--	Configuration  -------------------------------
--------------------------------------------------

local team = "Marines"
local goal = "Winter Sky"

--	Variables  -----------------------------------
--------------------------------------------------

local serverHop = loadstring(game:HttpGet("https://raw.githubusercontent.com/Maspeee/Roblox/Shared/ServerHop"))()

local commF = RStorage:WaitForChild("Remotes").CommF_

local Notif = Instance.new("Sound", workspace)
Notif.SoundId = "rbxassetid://261082034"
Notif.PlayOnRemove = true
Notif.Volume = 10

--	Functions  -----------------------------------
--------------------------------------------------

function snipe()
    commF:InvokeServer("SetTeam", team)
    local color = commF:InvokeServer("ColorsDealer", "1")
    
    if color == goal then
        commF:InvokeServer("ColorsDealer", "2")
        Notif:Destroy()
        print("Request for buying " ..color)
        
    else
        serverHop("https://raw.githubusercontent.com/Maspeee/Roblox/BloxFruits/SnipeHaki")
    end
end

--	Main  ----------------------------------------
--------------------------------------------------

snipe()
