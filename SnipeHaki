--	Services  ------------------------------------
--------------------------------------------------

local RStorage = game:GetService("ReplicatedStorage")

--	Variables  -----------------------------------
--------------------------------------------------

local hopFunc = loadstring(game:HttpGet("https://raw.githubusercontent.com/Maspeee/Roblox/Shared/ServerHop"))()

local notif = Instance.new("Sound")
    notif.SoundId = "rbxassetid://261082034"
    notif.Volume = 10
    notif.Parent = workspace

local commF = RStorage:WaitForChild("Remotes").CommF_

--	Functions  -----------------------------------
--------------------------------------------------

function snipeHaki()
    commF:InvokeServer("SetTeam", getgenv().team)
    local current = commF:InvokeServer("ColorsDealer", "1")
    
    if current == getgenv().goal then        print("Request to buy: " ..current)
        commF:InvokeServer("ColorsDealer", "2")
        notif:Play()
        
    else
        hopFunc(getgenv().link, 2000, 0)
    end
end

--	Main  ----------------------------------------
--------------------------------------------------

snipeHaki()
